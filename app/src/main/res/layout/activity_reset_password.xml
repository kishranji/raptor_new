<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResetPasswordActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:scaleType="centerCrop"
        android:src="@drawable/loginbg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/reset_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="You have a request to reset your password "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reset_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen5"
            android:text="for Username"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen15"
            android:background="@drawable/circular_boder_grey"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5"
                android:padding="@dimen/dimen15"
                android:src="@drawable/ic_key"
                android:tint="@color/grey" />

            <EditText
                android:id="@+id/reset_userpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_marginRight="@dimen/dimen20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/lable_enter_user_name"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen15"
            android:background="@drawable/circular_boder_grey"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen5"
                android:padding="@dimen/dimen15"
                android:src="@drawable/ic_key"
                android:tint="@color/grey" />

            <EditText
                android:id="@+id/reset_confirm_userpass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dimen20"
                android:layout_marginRight="@dimen/dimen20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/lable_enter_user_name"
                android:inputType="textPassword"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/resetBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dimen35"
            android:layout_marginTop="@dimen/dimen15"
            android:layout_marginRight="@dimen/dimen35"
            android:layout_marginBottom="@dimen/dimen15"
            android:background="@drawable/circular_button_gradient"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen35"
                android:layout_height="@dimen/dimen35"
                android:layout_marginLeft="@dimen/dimen15"
                android:padding="@dimen/dimen5"
                android:src="@drawable/ic_mail"
                android:tint="@color/white"
                android:layout_marginStart="@dimen/dimen15" />

            <TextView
                android:id="@+id/reset_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen15"
                android:background="@null"
                android:gravity="center"
                android:text="@string/lable_reset"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/dimen15"
                android:layout_marginStart="@dimen/dimen10" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dimen25"
            android:layout_marginRight="@dimen/dimen25"
            android:layout_marginBottom="@dimen/dimen10"
            android:background="@color/red" />

        <TextView
            android:id="@+id/reset_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen5"
            android:text="Want to Go Back? Click here!"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>